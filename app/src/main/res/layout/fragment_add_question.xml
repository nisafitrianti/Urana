<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".ui.AddQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginStart="14dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Pertanyaan"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/modal"
        android:orientation="vertical"
        android:layout_margin="18dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:textColor="#0165C0"
            android:text="Masukan Pertanyaan" />

        <EditText
            android:id="@+id/et_pertanyaan"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Masukan Pertanyaanmu"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/modal"
        android:orientation="vertical"
        android:layout_margin="18dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:textColor="#0165C0"
            android:text="Kategori Kategori" />

        <EditText
            android:id="@+id/et_kategori"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Masukan kategori dari pertanyaan"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_tambah_pertanyaan"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_radius"
        android:backgroundTint="@color/colorAccent"
        android:text="Tambahkan Pertanyaan"
        android:textSize="18dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_margin="18dp"
        android:layout_gravity="center"/>

</LinearLayout>
</layout>