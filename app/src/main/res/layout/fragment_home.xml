<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/svg_bg_home"
    android:orientation="vertical"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="62dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/svg_logo_black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/modal">

        <Button
            android:id="@+id/btn_mulai_permainan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/colorPrimary"
            android:padding="18dp"
            android:text="Mulai Permainan"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_buat_pertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/colorPrimary"
            android:padding="18dp"
            android:text="Buat Pertanyaan"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_main_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/colorPrimary"
            android:padding="18dp"
            android:text="Main Dengan Teman Online"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_cara_bermain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/colorPrimary"
            android:padding="18dp"
            android:text="Cara Bermain"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_tentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_radius"
            android:backgroundTint="@color/colorPrimary"
            android:padding="18dp"
            android:text="Tentang"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
</layout>